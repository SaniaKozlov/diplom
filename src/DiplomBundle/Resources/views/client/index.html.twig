    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/image-picker.js') }}"></script>
        <script>
            $(document).ready(function () {
                $('#modallAdd').on('shown.bs.modal', function () {
                    $('.selectpicker').imagepicker({
                        hide_select : true,
                        show_label  : false,
                        selected: function(option){
                            var value = this.val();
                            $("#image").val(value);
                        }
                    });

                });

                $('#jsSubmit').on('click',function () {
                    $('#js-form-add').submit();
                })
            });

            $('#jsSubmit').on('click',function () {
                $('#js-form-add').submit();
            })

            $('.editClient').on('click', function () {
                var id = $(this).attr('data-id');
                var url = '/client/edit/'+id;
                $.ajax({
                    method: "GET",
                    url: url
                })
                        .done(function( response ) {
                            var result = response['result'];
                            $('#name').val(result.name);
                            $('#email').val(result.email);
                            $('#image').val(result.image);
                            $('#birth').val(result.birth);
                            $('#lastname').val(result.lastname);
                            $('#phone').val(result.phone);

                            $('#modallEdit').modal();
                            $('.selectpicker').imagepicker({
                                hide_select : true,
                                show_label  : false,
                                selected: function(option){
                                    var value = this.val();
                                    $("#image").val(value);
                                }
                            });
                        });
            })

        </script>
